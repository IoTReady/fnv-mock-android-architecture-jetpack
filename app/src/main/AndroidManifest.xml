<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FnvTrail"
        tools:targetApi="31">
        <activity
            android:name=".TransferOutScreen"
            android:exported="false"
            android:label="@string/title_activity_transfer_out_screen"
            android:theme="@style/Theme.FnvTrail" />
        <activity
            android:name=".ProcurementScreen"
            android:exported="false"
            android:label="@string/title_activity_procurement_screen"
            android:theme="@style/Theme.FnvTrail" />
        <activity
            android:name=".SpinnerScreen"
            android:exported="false"
            android:label="@string/title_activity_spinner_screen"
            android:theme="@style/Theme.FnvTrail" />
        <activity
            android:name=".RecyclerViewScreen"
            android:exported="false"
            android:label="@string/title_activity_recycler_view_screen"
            android:theme="@style/Theme.FnvTrail" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>